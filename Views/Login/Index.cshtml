@model ProMats.Models.LoginModel
@using Microsoft.AspNetCore.Mvc.Rendering;
@using Microsoft.AspNetCore.Http

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProMats</title>
    <!-- AdminLTE V3 -->
    <link href="~/Content/adminlte.min.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/fontawesome.css" rel="stylesheet" />
    <link href="~/lib/adminlte/plugins/fontawesome-free/css/solid.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/adminlte/dist/css/adminlte.min.css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="~/asset/favicon.ico">
</head>

<body class="bg">
    <div class="container-fluid mask mb-5 pb-5">
        <div class="row mt-5">
            <div class="col-12 mt-4">
            </div>
        </div>
        <div class="row align-items-center justify-content-center p-2">
            <div class="col-md-6 mt-5 text-center">
                <div class="text-dark">
                    <h1 style="font-size:50pt;"><i class="fas fa-cogs"></i></h1>
                </div>
                <h1 class="text-dark"><b>SISTEM INFORMASI</b></h1>
                <h5>PENGOLAHAN DATA MATERIAL</h5>
                <div class="mt-5">
                    <p>Version 1.0</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 shadow-sm">
                    <p class="login-box-msg text-dark">@ViewData["Message"]</p>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="username">Username<span class="text-danger">*</span></label>
                            <div class="input-group">
                                @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", Required = true } })
                                <div class="input-group-append">
                                    <span class="fa fa-user input-group-text bg-dark"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Password<span class="text-danger">*</span></label>
                            <div class="input-group">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @Type = "password", @class = "form-control", Required = true } })
                                <div class="input-group-append">
                                    <span class="input-group-text bg-dark"><i class="fas fa-lock"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" class="btn btn-dark btn-block rounded"><i class="fas fa-sign-in-alt"></i> Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <footer class="container-fluid">
        <div class="row">
            <div class="col-12 text-center text-white" style="font-size:10pt;">
                <ul style="list-style-type:none; padding: 0;">
                    <li>&copy;2024 PT TRIPLUS HITECH</li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <style>
        .bg {
            background: url('@Url.Content("~/images/background/background.jpg")') no-repeat center center fixed;
            width: 100%;
            background-size: cover;
        }

        .mask {
            background: rgba(255, 255, 255, 0.83);
            margin-top: 6rem;
            border-radius: 2px;
        }

        .card {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            margin-top: 2rem;
        }

            .card .btn {
                transition: background-color 0.3s, transform 0.3s;
            }

                .card .btn:hover {
                    background-color: #343a40;
                    transform: scale(1.05);
                }

        .input-group .input-group-text {
            background: #343a40;
            border: none;
            color: #fff;
        }

        .input-group .form-control {
            border-right: 0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: bold;
        }

        footer ul {
            margin: 0;
            margin-top: -1rem;
        }
    </style>
</body>
</html>