                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#dc3545',
                confirmButtonText: 'Yes!',
                cancelButtonText: 'No!',
                showLoaderOnConfirm: true,
                preConfirm: function () {
                    return new Promise(function (resolve, reject) {
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("UPDATE_PART_DATA", "PMC")", // Ensure this is correctly generated by Razor
                            data: {
                                id_part: id_part,
                                part_code: part_code,
                                part_name: part_name,
                                part: part,
                                runner: runner
                            },
                            success: function (data) {
                                if (data.success) {
                                    Swal.fire({
                                        title: 'Added!',
                                        text: 'Your Master Data has been Update.',
                                        icon: 'success'
                                    });
                                    setTimeout(function () {
                                        location.reload();
                                    }, 1000);
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: data.message || 'An error occurred.'
                                    });
                                }
                            },
                            error: function () {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'An error occurred during the AJAX request.'
                                });
                            }
                        });
                    });
                }
            });
        }

        function process_data() {
            var part_code = $('#select_code').val();
            if (part_code == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Input',
                    text: 'Please fill in all the required fields!'
                });
            } else {
                Swal.fire({
                    title: "Process " + part_code + "?",
                    text: "Are you sure you want to process this data?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonColor: '#dc3545',
                    confirmButtonText: 'Yes, process it!',
                    cancelButtonText: 'Cancel',
                    showLoaderOnConfirm: true,
                    preConfirm: function () {
                        return new Promise(function (resolve, reject) {
                            $.ajax({
                                type: "POST",
                                url: "@Url.Action("PROCESS_POFINISH", "PMC")",
                                data: {
                                    part_code: part_code
                                },
                                dataType: "json",
                                success: function () {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Processed',
                                        text: 'The data has been processed successfully!'
                                    });
                                    setTimeout(function () {
                                        window.location.href = '@Url.Action("PartList", "PMC")';
                                    }, 1000);
                                },
                                error: function (xhr) {
                                    let message = "An error occurred during the process.";
                                    if (xhr.status === 400 && xhr.responseText) {
                                        message = xhr.responseText;
                                    }
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Process Failed',
                                        text: message
                                    });
                                }
                            });
                        });
                    }
                });
            }
        }

