                preConfirm: function () {
                    return new Promise(function (resolve, reject) {
                        $.ajax({
                            type: "POST",
                            url: "@Url.Action("ADD_MATERIAL_DATA", "PMC")", // Ensure this is correctly generated by Razor
                            data: {
                                part_code: part_code,
                                material_id: material_id,
